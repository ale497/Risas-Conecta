<body>
  <h1>Risas Conecta</h1>
  <div id="game-message"></div>
  <div class="grid" id="game-grid"></div>
  <script>
    // Lista de emojis de risa
    const emojis = [
      'ðŸ˜‚', 'ðŸ¤£', 'ðŸ˜…', 'ðŸ˜†', 'ðŸ˜', 'ðŸ˜„', 'ðŸ˜ƒ', 'ðŸ˜€', 'ðŸ˜¹', 'ðŸ˜¸', 'ðŸ˜º', 'ðŸ˜œ'
    ];

    const grid = document.getElementById('game-grid');
    const message = document.getElementById('game-message');
    let selected = [];
    let matches = 0;

    // Genera la cuadrÃ­cula del juego
    function createGrid() {
      const tiles = [];
      emojis.forEach(emoji => {
        tiles.push({ emoji });
        tiles.push({ emoji }); // Agrega un par de cada emoji
      });
      // Mezcla las fichas
      tiles.sort(() => Math.random() - 0.5);
      
      // Agrega las fichas al DOM
      tiles.forEach(tile => {
        const div = document.createElement('div');
        div.classList.add('tile');
        div.textContent = tile.emoji;
        div.dataset.emoji = tile.emoji;
        div.addEventListener('click', () => selectTile(div));
        grid.appendChild(div);
      });
    }

    // Seleccionar ficha
    function selectTile(tile) {
      if (selected.length < 2 && !tile.classList.contains('matched')) {
        tile.classList.add('selected');
        selected.push(tile);

        if (selected.length === 2) {
          checkMatch();
        }
      }
    }

    // Verifica si las fichas seleccionadas coinciden
    function checkMatch() {
      const [first, second] = selected;
      if (first.dataset.emoji === second.dataset.emoji) {
        first.classList.add('matched');
        second.classList.add('matched');
        matches++;
        if (matches === emojis.length) {
          message.textContent = 'Â¡Ganaste! ðŸŽ‰';
        }
      } else {
        setTimeout(() => {
          first.classList.remove('selected');
          second.classList.remove('selected');
        }, 500);
      }
      selected = [];
    }

    // Inicia el juego
    createGrid();
  </script>
</body>
</html>
